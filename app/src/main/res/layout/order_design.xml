<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/viewbutton"
    android:elevation="5dp"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_height="170dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">





    <View
        android:id="@+id/rectangle_1"
        android:layout_width="99dp"
        android:layout_marginBottom="2dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/imagecard"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView

        android:id="@+id/imageview1"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="6dp">

        <ImageView
            android:id="@+id/itemimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round" />

    </androidx.cardview.widget.CardView>


    <TextView

        android:id="@+id/abovetext"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/montserrat"
        android:paddingHorizontal="8dp"
        android:autoSizeMinTextSize="4sp"
        android:autoSizeMaxTextSize="16sp"
        android:autoSizeStepGranularity="1sp"
        android:text="2 kg Fresh Farm Apples "
        android:textColor="#383838"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="top"
        app:layout_constraintHorizontal_bias="0.134"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp"
        android:layout_alignParentTop="true"/>


    <TextView

        android:id="@+id/Price"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat"
        android:paddingHorizontal="8dp"
        android:text="Rs. 200"
        android:textColor="#383838"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="120dp"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/abovetext"/>


    <TextView

        android:id="@+id/delivery_Status"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="120dp"
        android:fontFamily="@font/montserrat"
        android:paddingHorizontal="8dp"
        android:text="Getting delivered 3 Jan "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.119"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Price">

    </TextView>




</androidx.constraintlayout.widget.ConstraintLayout>